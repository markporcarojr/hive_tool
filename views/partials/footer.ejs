        document.querySelector("#clouds").innerHTML = "ğŸŒ";
      } else if (data.weather[0].main == "Rain") {
        document.querySelector("#clouds").innerHTML = "ğŸŒ§ï¸";
      } else if (data.weather[0].main == "Drizzle") {
