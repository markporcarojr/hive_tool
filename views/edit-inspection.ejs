<%- include("partials/header")%>
  <%- include("partials/navbar")%>
  

    <section>
        <div class="container" style="max-width: 500px;">
            <div class="card text-michgold text-center mt-2" style="max-width: 90vw;">
                <h1>Edit Inspection</h1>
                <h5 class="card-title mt-3" id="datetime"></h5>
                <div class="d-flex justify-content-between mt-3">
                  <p class="card-text">üìç Fenton MI</p>
                  <p class="card-text">56‚Ñâ üå§Ô∏è</p>
                </div>
                
                <form action="/inspection/update/<%= data.id %>?_method=PUT" method="post" id="edit-inspection-form">
                 <input type="hidden" name="_method" value="PUT">
                  <div class="text-center m-3">
                    <label for="hiveNumber" class="form-label mb-3 fs-3 fw-semibold"
                      >Hive Number</label
                    >
                    <input
                      type="number"
                      class="form-control text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold"
                      id="hiveNumber"
                      name="hiveNumber"
                      aria-describedby="hiveNumber"
                      value="<%= data.hiveNumber %>"
                    />
                  </div>
                      <label for="temperament" class="text-center mb-3 fw-semibold fs-3">Temperament</label>
                      <div class="d-flex justify-content-evenly mb-3">
                          <input type="radio" class="btn-check" name="temperament" id="calm" value="‚úì Calm" autocomplete="off" <%= data.temperament === "‚úì Calm" ? "checked" : "" %>>
                          <label class="btn temperBtn" for="calm">Calm</label>
                  
                          <input type="radio" class="btn-check" name="temperament" id="aggressive" value="‚ö†Ô∏è Aggressive" autocomplete="off"  <%= data.temperament === "‚ö†Ô∏è Aggressive" ? "checked" : "" %>>
                          <label class="btn temperBtn" for="aggressive">Aggressive</label>
                  
                          <input type="radio" class="btn-check" name="temperament" id="active" value="‚úì Active" autocomplete="off" <%= data.temperament === "‚úì Active" ? "checked" : "" %>>
                          <label class="btn temperBtn" for="active">Active</label>
                      </div>
                  
                  
                  
                  <div class="text-center mt-3 mx-3 fw-semibold fs-3">
                      <p>Hive Strength</p>
                  </div>
                  <div class="d-flex justify-content-evenly">
                    <p class="mt-3">0</p>
                    <input
                      type="range"
                      class="m-3 custom-range bg-michgold"
                      min="0"
                      max="100"
                      id="strength"
                      name="strength"
                      style="min-width: 17rem"
                      value=" <%= data.hiveStrength %> "
                    />
                    <p class="mt-3"><%= data.hiveStrength %></p>
                  </div>
                  <!-- <div class="mt-4 d-flex flex-column"> -->
                    <div class="form-check d-flex justify-content-between  ">
                      <label class=" fs-2 mb-0" for="queen">
                        Queen
                      </label>
                      <input class="form-check-input btn-lg my-3" type="checkbox" value="‚úì Queen Spotted" id="queen" name="queen"  <%= data.queen ? 'checked' : '' %>>
                    </div>
                    <div class="form-check d-flex justify-content-between mb-2 ">
                      <p class="form-check-label fs-2 mb-1" for="queenCell">
                        Queen Cells
                      </p>
                      <input class="form-check-input btn-lg my-3" type="checkbox" value="‚ö†Ô∏è Queen Cells" id="queenCell" name="queenCell"  <%= data.queenCell ? 'checked' : '' %>>
                    </div>
                    <div class="form-check d-flex justify-content-between mb-2 ">
                      <p class="form-check-label fs-2 mb-1" for="eggs">
                        Eggs
                      </p>
                      <input class="form-check-input btn-lg my-3" type="checkbox" value="‚úì Eggs" id="eggs" name="eggs"  <%= data.eggs ? 'checked' : '' %>>
                    </div>
                      <select name="brood" id="brood" class="form-select mb-2 text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold" >
                        <option   selected disabled><%= data.brood %></option>
                          <option value="‚úì Normal Brood">Normal</option>
                          <option value="‚úì Spotty Brood">Spotty</option>
                          <option value="‚úì Compact Brood">Compact</option>
                        </select>
                  
                      <select name="disease" id="disease" class="form-select mb-2 text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold" >
                        <option   selected disabled><%= data.disease %></option>
                          <option value="‚ö†Ô∏è Varroa Mites">Varroa Mites</option>
                          <option value="‚ö†Ô∏è Chalkbrood">Chalkbrood</option>
                          <option value="‚ö†Ô∏è Stonebrood">Stonebrood</option>
                          <option value="‚ö†Ô∏è American Foulbrood">American Foulbrood</option>
                          <option value="‚ö†Ô∏è European Foulbrood">European Foulbrood</option>
                        </select>
                  
                      <select name="pests" id="pests" class="form-select mb-2  text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold" >
                        <option   selected disabled><%= data.pests %></option>
                          <option value="‚ö†Ô∏è Wax moths">Wax Moths</option>
                          <option value="‚ö†Ô∏è Mice">Mice</option>
                          <option value="‚ö†Ô∏è Hive Beetle">Hive Beetle</option>
                          <option value="‚ö†Ô∏è Ants">Ants</option>
                        </select>
                  <!-- </div> -->
                  <label for="inspectionDate" class="form-label fs-3 fw-semibold my-3">Date</label>
                  <input
                    type="date"
                    class="form-control text-center bg-inputgrey border-3 border-michgold rounded-4 opacity-50 fw-bold"
                    id="inspectionDate"
                    name="inspectionDate"
                    value="<%= data.inspectionDate %>"
                  />
                </form>

            </div>
              <div class="d-flex justify-content-around mt-3">
                  <button
                      type="submit"
                      form="edit-inspection-form"
                      class="btn px-5 btn-michgold btn-gold fw-bold rounded-pill"
                      >
                      UPDATE
                  </button>
              </div> 
        </div>
    </section>


    
    
    
    
    
    <%- include("partials/footer")%>

    </body>
  </html>
